# Use a development-specific base image with Go and Air
FROM golang:1.21-alpine as development

# Set environment variables for AWS SDK
ENV AWS_SDK_LOAD_CONFIG=true

ARG DB_HOST
ARG DB_PORT
ARG DB_USER
ARG DB_PASSWORD
ARG DB_NAME

WORKDIR /app

# Install air for development
RUN go install github.com/cosmtrek/air@latest

# Copy go.mod and go.sum for dependency downloading
COPY go.mod .
COPY go.sum .

# Copy the AWS credentials file from the host to the container
COPY ~/.aws/credentials /root/.aws/credentials

# Download dependencies
RUN go mod download

# Copy the entire project into the container
COPY . .

# Start the application in development mode with air
CMD ["air", "-c", ".air.toml"]

# Expose the application's port
EXPOSE 8080
